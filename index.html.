<body>
  <header>
    <h1>P2P Trade Platform</h1>
  </header>

  <div class="trade-container">
    <h2>P2P Обменник</h2>
    <div class="trade-form">
      <form id="tradeForm">
        Валюта: <input type="text" id="currency" placeholder="USDT, BTC..." required><br>
        Сумма: <input type="number" id="amount" placeholder="Введите сумму" required><br>
        Способ оплаты: <input type="text" id="method" placeholder="Банк, QIWI..." required><br>
        Тип: <select id="type">
          <option value="Купить">Купить</option>
          <option value="Продать">Продать</option>
        </select><br>
        Контакт: <input type="text" id="contact" placeholder="Telegram или email" required><br>
        <button onclick="addTrade(event)">Добавить сделку</button>
      </form>
    </div>

    <div class="trade-list" id="tradeList">
      <h3>Активные сделки:</h3>
    </div>
  </div>

  <script>
    let trades = [];

    function addTrade(event) {
      event.preventDefault();
      const currency = document.getElementById("currency").value;
      const amount = document.getElementById("amount").value;
      const method = document.getElementById("method").value;
      const type = document.getElementById("type").value;
      const contact = document.getElementById("contact").value;

      if (currency && amount && method && contact) {
        const trade = {
          id: Date.now(),
          text: `${type}: ${amount} ${currency} через ${method} (Контакт: ${contact})`
        };
        trades.push(trade);
        updateTradeList();
        document.getElementById("tradeForm").reset();
      } else {
        alert("Заполните все поля!");
      }
    }

    function updateTradeList() {
      const tradeList = document.getElementById("tradeList");
      tradeList.innerHTML = "<h3>Активные сделки:</h3>";
      trades.forEach((trade) => {
        const div = document.createElement("div");
        div.className = "trade-item";
        div.innerHTML = `
          ${trade.text}
          <button onclick="removeTrade(${trade.id})">Удалить</button>
        `;
        tradeList.appendChild(div);
      });
    }

    function removeTrade(id) {
      trades = trades.filter(trade => trade.id !== id);
      updateTradeList();
    }
  </script>
</body>
</html>
